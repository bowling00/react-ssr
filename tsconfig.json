{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "incremental": true,
  },
  "exclude": ["node_modules", "__tests__"],
  "include": ["**/*.ts", "**/*.tsx", "webpack.server.js", "webpack.config.js", "webpack.common.js"]
}
